import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.NoSuchElementException;
import java.util.Scanner;

public class Server {
	public static String upperCase(String s)
	{
		return s.toUpperCase();
	}

	public static int dbl(int s)
	{
		return s*2;
	}

	public static String getFirstName(String f, String s)
	{
		return f;
	}

	public static int sqr(int s)
	{
		return s*s;
	}
	public static void main(String[] args) throws IOException {
		ServerSocket serverSocket = new ServerSocket(23456);
		Socket connectionSocket = serverSocket.accept(); // wait for a connection
		InputStreamReader in = new InputStreamReader(connectionSocket.getInputStream());
		BufferedReader bf = new BufferedReader(in);
		PrintWriter pw = new PrintWriter(connectionSocket.getOutputStream());

		while (true) {

			System.out.println("client connected");

			String str = bf.readLine();
			String input[] = str.split(" ");
			switch(input[0]){
				case "upper":
					pw.println(upperCase(input[1]));
					pw.flush();
					break;

				case "double":
					int Doublevalue = Integer.parseInt(input[1]);
					pw.println(dbl(Doublevalue));
					pw.flush();
					break;

				case "getFirstName":
					pw.println(getFirstName(input[1], input[2]));
					pw.flush();
					break;

				case "square":
					int sqrValue = Integer.parseInt(input[1]);
					pw.println(sqr(sqrValue));
					pw.flush();
					break;

				default:
					pw.println("not a command");
					pw.flush();
			}

		}	
	}
}

